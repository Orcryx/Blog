{% extends "layout.twig" %}
{% block title %}Page contact du {% endblock %}
{% block css %}
  <link rel="stylesheet" href="../../public/css/profil.css"/>
{% endblock %}
{% block js %}{% endblock %}

{% block content %}
  <div id="content">
    <div id="blurred">
      <div id="contact" class="flex-column">
          <h1>Écrivez-moi !</h1>
          <form id="contact-form" class="flex-column-center" action="/contact" method="POST">
                <input type="hidden" name="formType" value="contact">  <!-- Champ caché -->

                <div class="flex-column field">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" required>
                </div>

                <div class="flex-column field">
                    <label for="message">Message:</label>
                    <textarea id="textarea-message" name="message" required></textarea>
                </div>

                <div class="flex-column field">
                    <button class="button-mini" type="submit">Envoyer</button>
                </div>
            </form>
            
            {% if app.request.query.get('success') == '1' %}
                <p>Merci, votre message a bien été envoyé.</p>
            {% endif %}
      </div>
      <a href="/" alt="Lien vers la page d'accueil" class="bottom-link"><i class="fa-solid fa-arrow-left"> Retour</i></a>
    </div>
 </div>
{% endblock %}

